<div class="container-fluid search-area">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="row btn-block search-box">
          <div class="col-md-9">
            {{input class="search-box btn-block" value=url placeholder="Search for ..."}}
          </div>
          <div class="col-md-2">
              <button class="btn btn-block btn-search" {{action "searchRestaurant"}}> 
                <img src="assets/images/search.png" class="img-responsive">
              </button>
            </div>
        </div>
      </div>

    </div>


    {{#if object}}
    <div class="search-area col-md-offset-3 col-md-6">
      {{object.name}}
      {{#search-item marker=object}}
      {{/search-item}}
    </div>
    {{/if}}
  </div>

